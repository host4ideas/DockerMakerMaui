<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DockerMakerMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DockerMakerMaui.Views"
    xmlns:local="clr-namespace:DockerMakerMaui">

    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Containers"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:ContainersPage}"
        Route="ContainersPage" />
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Images"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:ImagesPage}"
        Route="ImagesPage" />
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Create containers"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:CreateContainerPage}"
        Route="CreateContainerPage" />
</Shell>
